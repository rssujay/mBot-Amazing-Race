
#include <Arduino.h>
#include <Wire.h>
#include <SoftwareSerial.h>
#include <MeMCore.h>

MeDCMotor motor_9(9);
MeDCMotor motor_10(10);

MeRGBLed rgbled_7(7, 7==7?2:4);
MeLightSensor lightsensor_6(6);

/**
 * What to do when colour sensor detects a colour
 * Detects RGB values and does challenge
 */
void colourAction(uint8_t red, uint8_t green, uint8_t blue) {
  // scan red
  rgbled_7.setColor(0,60,0,0);
  rgbled_7.show();
  delay(0.1);
  red = lightsensor_6.read();
  Serial.println("%d: RED VALUE", red);

  // scan green
  rgbled_7.setColor(0,0,60,0);
  rgbled_7.show();
  delay(0.1);
  green = lightsensor_6.read();
  Serial.println("%d: GREEN VALUE", green);

  // scan blue
  rgbled_7.setColor(0,0,0,60);
  rgbled_7.show();
  delay(0.1);
  blue = lightsensor_6.read();
  Serial.println("%d: BLUE VALUE", blue);
  
  switch(red, green, blue) {
    case(red > 180):
      // red
//      leftTurn();
      Serial.println("RED");
      break;
    case(green > 180):
      // green
//      rightTurn();
      Serial.println("GREEN");
      break;
    case(blue > 180):
      // blue
//      RRTurn();
      Serial.println("BLUE");
      break;
    case(red < 40 && blue < 40 && red < 40):
      // white
//      uTurn();
      Serial.println("WHITE");
      break;
    case(blue < 40 && green > 135 && green < 175 && red > 120)
      // orange
//      LLTurn();
      Serial.println("ORANGE");
      break;
  }
}

void setup() {
  uint8_t red, green, blue;
}

void loop() {
  colourAction(red, green, blue);
}
